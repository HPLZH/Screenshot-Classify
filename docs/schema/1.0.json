{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "version": {
            "const": "1.0"
        },
        "content": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "min_value": {
                        "type": "number"
                    },
                    "rules": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "value": {
                                    "type": "number"
                                },
                                "accept": {
                                    "type": "number"
                                },
                                "rect": {
                                    "type": "object",
                                    "properties": {
                                        "type": {
                                            "oneOf": [
                                                {
                                                    "const": "px"
                                                },
                                                {
                                                    "const": "relative"
                                                }
                                            ]
                                        },
                                        "range": {
                                            "type": "array",
                                            "items": {
                                                "type": "number"
                                            },
                                            "minItems": 4,
                                            "maxItems": 4
                                        }
                                    },
                                    "required": [
                                        "type",
                                        "range"
                                    ]
                                },
                                "pattern": {
                                    "type": "string",
                                    "pattern": "^((?:\\\\(?:[dDsSwWtnrfbv0-7]{1,3}|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4}|U[0-9a-fA-F]{8}|.)|\\[(?:\\\\\\]|\\\\[^\\]]|[^\\\\\\]])*\\]|\\{\\d+(?:,\\d*)?\\}|[\\.^$*+?{}()|\\[\\]]|[^\\\\\\[\\]{}()|^$.*+?])+)$",
                                    "$comment": "pattern 匹配 Python 正则表达式, 由 DeepSeek 生成"
                                }
                            },
                            "required": [
                                "value",
                                "pattern"
                            ]
                        }
                    }
                },
                "required": [
                    "min_value",
                    "rules"
                ]
            }
        },
        "ocr_range":{
            "type":"array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "oneOf": [
                            {
                                "const": "px"
                            },
                            {
                                "const": "relative"
                            }
                        ]
                    },
                    "range": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        },
                        "minItems": 4,
                        "maxItems": 4
                    }
                },
                "required": [
                    "type",
                    "range"
                ]
            }
        }
    },
    "required": [
        "content"
    ]
}